@{
    Layout = null;
    string word = Request.QueryString["word"];
    string count = Request.QueryString["count"];
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Echo</title>
</head>
<body>
    <h1>Exercise 3: Echo</h1>
    <div>
        <ul style="list-style-type:none">
            @{
                if (String.IsNullOrEmpty(word))
                {
                    word = "Hello";
                }
                if (String.IsNullOrEmpty(count))
                {
                    count = "25";
                }

                for (int i = int.Parse(count); i > 0; i--)
                {
                    <li style="font-size: @i.ToString()px;">
                        @word
                    </li>
                }
            }
        </ul>
    </div>
</body>
</html>