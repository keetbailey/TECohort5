@model List<SSGeek.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products</h2>

<section>


        @foreach (var product in Model)
        {
           <a href="@Url.Action("Detail", "Store", new { id = product.ProductId })">
               <img style="height:200px; width: 250px" src="@Url.Content("~/Content/img/" + product.ImageName)" /></a>
        
               <p style="color:red"> @product.Name </p>
                <p style="color:red"> @product.Price.ToString("C") </p>
                
    }

    </section>

