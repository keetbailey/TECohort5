@model GetExercises.Web.Models.FilmSearchModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("SearchResult", "Film", FormMethod.Get))  
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Film</h4>
        <hr />
        @*@Html.DropDownList(m => m.Genre, )*@   @*possibly using drop down list to pull from FilmSearchModel rather than Select*@
        <select name="Genre">
            @*add more genres*@
            <option value="Comedy">Comedy</option>
            <option value="Drama">Drama</option>
            <option value="Action">Action</option>
            <option value="Horror">Horror</option>
        </select>
        @Html.TextBoxFor(m => m.MinLength, new { placeholder = "Optional Min Value" })
        @Html.TextBoxFor(m => m.MaxLength, new { placeholder = "Optional Max Value" })
    

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>